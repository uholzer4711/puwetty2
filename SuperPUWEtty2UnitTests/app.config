<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <appSettings>  
    <!-- for testing -->
    <add key="SuperPUWEtty2.ScpTests.PscpLocation" value="C:\\Users\\jradford\\Downloads\\pscp.exe"/>
    <add key="SuperPUWEtty2.ScpTests.UserName" value="scptest"/>
    <add key="SuperPUWEtty2.ScpTests.Password" value="123"/>
    <add key="SuperPUWEtty2.ScpTests.KnownHost" value="localhost"/>
    <add key="SuperPUWEtty2.ScpTests.UnKnownHost" value="127.0.0.1"/>
  </appSettings>
  
  <log4net debug="false">

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
      </layout>
    </appender>

    <appender name="DebugAppender" type="log4net.Appender.DebugAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
      </layout>
    </appender>

    <logger name="SuperPUWEtty2.ApplicationPanel">
      <level value="INFO"/>
    </logger>
    <logger name="SuperPUWEtty2.SessionTreeview">
      <level value="INFO"/>
    </logger>
    <logger name="SuperPUWEtty2.Utils.SimpleMRUTabSwitchStrategy">
      <level value="DEBUG"/>
    </logger>
    <logger name="SuperPUWEtty2.RemoteFileListPanel">
      <level value="INFO"/>
    </logger>
    <logger name="SuperPUWEtty2.Utils.ChildWindowFocusHelper">
      <level value="INFO"/>
    </logger>
    <logger name="SuperPUWEtty2.Scp.BrowserFileInfo">
      <level value="INFO"/>
    </logger>

    <root>
      <level value="DEBUG"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
  </log4net>
  
  <startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/></startup>
</configuration>
